<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HabitDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Genel Bakış Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Genel Bakış"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Skor Göstergesi -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical">

                        <ProgressBar
                            android:id="@+id/progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:max="100"
                            tools:progress="75"
                            android:progressTint="@color/progress_color" /> <!-- progressTint için API 21+ gerekir, veya programatik olarak ayarlayın -->

                        <TextView
                            android:id="@+id/tvCurrentScore"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            tools:text="75%"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- İstatistik Grid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false"> <!-- Lint uyarısını gidermek için -->

                        <!-- Tamamlama Oranı -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tvCompletionRate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="23%"
                                android:textColor="@color/stat_primary"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Puan"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <!-- Aylık Değişim -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tvMonthlyChange"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="+13%"
                                android:textColor="@color/stat_positive"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ay"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <!-- Yıllık Değişim -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tvYearlyChange"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="-1%"
                                android:textColor="@color/stat_negative"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Yıl"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <!-- Toplam Gün -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="4dp">

                            <TextView
                                android:id="@+id/tvTotalDays"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="251"
                                android:textColor="@color/stat_primary"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tümü"
                                android:textColor="@android:color/darker_gray"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Puan Grafiği Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Puan"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvCurrentStreak"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="15 gün"
                            android:textColor="@color/stat_primary"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Grafik alanı -->
                    <com.cantopac.habittracker.ui.SimpleChartView
                        android:id="@+id/chartView"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:background="@color/chart_background" /> <!-- chart_background renginizin colors.xml'de tanımlı olduğundan emin olun -->

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Takvim Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp"> <!-- Alt boşluk eklendi -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Takvim"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Takvim başlığı ve navigasyon -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="16dp"
                        android:gravity="center_vertical">

                        <ImageButton
                            android:id="@+id/btnPrevMonth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_chevron_left"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Önceki ay" />

                        <TextView
                            android:id="@+id/tvMonthYear"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            tools:text="Temmuz 2025"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:gravity="center" />

                        <ImageButton
                            android:id="@+id/btnNextMonth"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_chevron_right"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Sonraki ay" />

                    </LinearLayout>

                    <!-- Takvim -->
                    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                        android:id="@+id/calendarView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <!-- MaterialCalendarView için çeşitli app:mcv_... attributeları ile özelleştirmeler yapabilirsiniz -->
                    <!-- Örneğin: app:mcv_selectionColor="@color/your_selection_color" -->
                    <!-- app:mcv_showOtherDates="all" -->
                    <!-- app:mcv_arrowColor="@color/your_arrow_color" -->

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
